<%include ../partials/header%>
<div class = "container text-center">
	<header class = "jumbotron">
		<div class = container>
			<h1>Here are the campgrounds</h1>
			<p>Check out the amazing selection of campgrounds</p>
			<p>
				<a class = "btn btn-primary btn-large"href="/campgrounds/new">Add a new campground</a>
			</p>
		</div>
	</header>
</div>
<div class = "container">
	<div class = "row text-center display-flex" style= "display: flex; flex-wrap: wrap;">
		<%campgrounds.forEach(function(campground){%>
			<div class = "col-md-3 col-sm-6">
				<div class = "thumbnail">
					<div class = "caption">
						<h4> Campground name: <%= campground.name %> </h4>
					</div>
					<img class = "img-responsive img-fluid" src= "<%= campground.image%>">
					<a href = "/campgrounds/<%= campground._id %>"class = "btn btn-outline-info">View Campground</a>
				</div>
			</div>
		<%});%>
	</div>
</div>>
<%include ../partials/footer%>