<%include ../partials/header%>

<div class = "container">
	<div class="row">
        <h1 style="text-align: center">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
    		<form action = "/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
    		  <div class="form-group">
    		    <label for="campground[name]">Campground Name</label>
    		    <input type="text" class="form-control" name="campground[name]" value = "<%=campground.name%>" >
    		  </div>
    		  <div class="form-group">
    		    <label for="campground[image]">Image</label>
    		    <input type="text" class="form-control" name="campground[image]" value = "<%=campground.image%>">
    		  </div>
    		  <div class="form-group">
    		    <label for="campground[description]">Description</label>
    		    <input type="text" class="form-control" name="campground[description]" value = "<%=campground.description%>">
    		  </div>
    		  <div class="form-group">
    		  	<label for="campground[price]">Price per Night (in Euros)</label>
    		    <div class="input-group">
    		      <div class="input-group-addon">EUR</div>
    		      <input type="number" min="0.00" step="0.05" name="campground[price]" class="form-control" value = "<%=campground.price%>">
    		    </div>
    		  </div>
              <div class="alert alert-warning">
                <strong>Warning!</strong> You will edit this campground with the update button.
              </div>
    		  <div class = "form-group">
    		 	 <button type="submit" class="btn btn-warning">Update</button>
    		  </div>
    		</form>
	</div>
</div>

<%include ../partials/footer%>