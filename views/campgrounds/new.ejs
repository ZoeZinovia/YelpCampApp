<%include ../partials/header%>

<div class = "container" id = "newContainer">
	<div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
		<form action = "/campgrounds" method = "POST">
		  <div class="form-group">
		    <label for="campgroundName">Campground Name</label>
		    <input type="text" class="form-control" name="campgroundName" placeholder="Campground Name" >
		  </div>
		  <div class="form-group">
		    <label for="campgroundImage">Image</label>
		    <input type="text" class="form-control" name="campgroundImage" placeholder="Campground Image URL">
		  </div>
		  <div class="form-group">
		    <label for="campgroundDescription">Description</label>
		    <input type="text" class="form-control" name="campgroundDescription" placeholder="Campground Description">
		  </div>
		  <div class="form-group">
		  	<label for="campgroundPrice">Price per Night (in Euros)</label>
		    <div class="input-group">
		      <div class="input-group-addon">EUR</div>
		      <input type="number" min="0.00" step="0.05" value="1.00" name="campgroundPrice" class="form-control" placeholder="Price">
		    </div>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>

<%include ../partials/footer%>